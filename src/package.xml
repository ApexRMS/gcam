<?xml version="1.0" encoding="utf-8"?>
<package name="gcam" displayName="Global Change Assessment Model (GCAM)" version="1.0.0" url="https://github.com/ApexRMS/gcam">
  <transformers>
    <transformer name="Primary" isPrimary="True" className="SyncroSim.GCAM.Runtime" classAssembly="SyncroSim.GCAM">
      <datafeeds>
        <datafeed name="Application" dataScope="Library">
          <datasheets>
            <datasheet name="Application" isSingleRow="True">
              <columns>
                <column name="ApplicationID" dataType="Integer" isPrimary="True"/>
                <column name="Directory" dataType="String"/>
              </columns>
            </datasheet>
          </datasheets>
        </datafeed>
        <datafeed name="Region" dataScope="Project">
          <datasheets>
            <datasheet name="Region" valueMember="RegionID" displayMember="Name">
              <columns>
                <column name="RegionID" dataType="Integer" isPrimary="True"/>
                <column name="ProjectID" dataType="Integer"/>
                <column name="Name" dataType="String" fillWeight="10"/>
                <column name="ID" dataType="Integer" isOptional="True" fillWeight="5" validationType="WholeNumber" validationCondition="GreaterEqual" formula1="0"/>
                <column name="Description" dataType="String" isOptional="True" fillWeight="20"/>
              </columns>
              <validations>
                <validation validationType="UniqueOrNull" columns="ID"/>
              </validations>
            </datasheet>
          </datasheets>
        </datafeed>
        <datafeed name="LandAllocation" dataScope="Project">
          <datasheets>
            <datasheet name="LandAllocation" valueMember="LandAllocationID" displayMember="Name">
              <columns>
                <column name="LandAllocationID" dataType="Integer" isPrimary="True"/>
                <column name="ProjectID" dataType="Integer"/>
                <column name="Name" dataType="String" fillWeight="10"/>
                <column name="ID" dataType="Integer" isOptional="True" fillWeight="5" validationType="WholeNumber" validationCondition="GreaterEqual" formula1="0"/>
                <column name="Description" dataType="String" isOptional="True" fillWeight="20"/>
              </columns>
              <validations>
                <validation validationType="UniqueOrNull" columns="ID"/>
              </validations>
            </datasheet>
          </datasheets>
        </datafeed>
        <datafeed name="RunControl" displayName="Run Control" dataScope="Scenario">
          <datasheets>
            <datasheet name="RunControl" displayName="Run Control" isSingleRow="True">
              <columns>
                <column name="RunControlID" dataType="Integer" isPrimary="True"/>
                <column name="ScenarioID" dataType="Integer"/>
                <column name="MinimumIteration" displayName="Minimum Iteration" dataType="Integer" defaultValue="1" validationType="WholeNumber" validationCondition="GreaterEqual" formula1="1"/>
                <column name="MaximumIteration" displayName="Maximum Iteration" dataType="Integer" defaultValue="1" validationType="WholeNumber" validationCondition="GreaterEqual" formula1="1" format="d"/>
                <column name="MinimumTimestep" displayName="Minimum Timestep" dataType="Integer" defaultValue="0" validationType="WholeNumber" validationCondition="GreaterEqual" formula1="0" format="d"/>
                <column name="MaximumTimestep" displayName="Maximum Timestep" dataType="Integer" defaultValue="10" validationType="WholeNumber" validationCondition="GreaterEqual" formula1="0" format="d"/>
              </columns>
            </datasheet>
          </datasheets>
        </datafeed>
        <datafeed name="InputFile" displayName="Input Files" dataScope="Scenario">
          <datasheets>
            <datasheet name="InputFile" displayName="Input Files" isSingleRow="True">
              <columns>
                <column name="InputFileID" dataType="Integer" isPrimary="True"/>
                <column name="ScenarioID" dataType="Integer"/>
                <column name="ConfigurationFile" dataType="String" displayName="Configuration File" isExternalFile="True" externalFileAbsolute="True" externalFileFilter="XML Files|*.xml"/>
                <column name="PolicyTargetFile" dataType="String" displayName="Policy Target File" isExternalFile="True" externalFileAbsolute="True" externalFileFilter="XML Files|*.xml"/>
              </columns>
            </datasheet>
          </datasheets>
        </datafeed>
        <datafeed name="AggregatedLandAllocation" displayName="Aggregated Land Allocation" dataScope="Scenario" isOutput="True">
          <datasheets>
            <datasheet name="AggregatedLandAllocation" displayName="Aggregated Land Allocation">
              <columns>
                <column name="ScenarioID" dataType="Integer" isCompositeIndex="True"/>
                <column name="Iteration" dataType="Integer" isCompositeIndex="True" format="d"/>
                <column name="Timestep" dataType="Integer" isCompositeIndex="True" format="d"/>
                <column name="RegionID" displayName="Region" dataType="Integer" validationType="Datasheet" formula1="Region" allowDbNull="False" isCompositeIndex="True"/>
                <column name="LandAllocationID" displayName="Land Allocation" dataType="Integer" validationType="Datasheet" formula1="LandAllocation" allowDbNull="False" isCompositeIndex="True"/>
                <column name="Amount" displayName="Amount (km2)" dataType="Double"/>
              </columns>
            </datasheet>
          </datasheets>
        </datafeed>
      </datafeeds>
    </transformer>
  </transformers>
  <layouts>
    <layout name="coreforms_LibraryDatafeeds">
      <item name="Application"/>
    </layout>
    <layout name="coreforms_ProjectDatafeeds">
      <item name="Region"/>
      <item name="LandAllocation"/>    
    </layout>    
    <layout name="coreforms_ScenarioDatafeeds">
      <item name="InputFile"/>
    </layout>
  </layouts>
  <views>
    <view name="ApplicationDatafeedView" target="Application" className="SyncroSim.GCAM.ApplicationDatafeedView" classAssembly="SyncroSim.GCAM"/>
  </views>
</package>
